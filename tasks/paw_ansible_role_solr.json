{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "Execute the entire Ansible role imperatively",
  "input_method": "environment",
  "parameters": {
    "solr_workspace": {
      "description": "Ansible role variable (default: /root)",
      "type": "Optional[String]"
    },
    "solr_create_user": {
      "description": "Ansible role variable (default: true)",
      "type": "Optional[Boolean]"
    },
    "solr_user": {
      "description": "Ansible role variable (default: solr)",
      "type": "Optional[String]"
    },
    "solr_group": {
      "description": "Ansible role variable (default: {{ solr_user }})",
      "type": "Optional[String]"
    },
    "solr_version": {
      "description": "Ansible role variable (default: 8.11.2)",
      "type": "Optional[String]"
    },
    "solr_mirror": {
      "description": "Ansible role variable (default: https://archive.apache.org/dist)",
      "type": "Optional[String]"
    },
    "solr_remove_cruft": {
      "description": "",
      "type": "Optional[Boolean]"
    },
    "solr_service_manage": {
      "description": "Ansible role variable (default: true)",
      "type": "Optional[Boolean]"
    },
    "solr_service_name": {
      "description": "Ansible role variable (default: solr)",
      "type": "Optional[String]"
    },
    "solr_service_state": {
      "description": "Ansible role variable (default: started)",
      "type": "Optional[String]"
    },
    "solr_install_dir": {
      "description": "Ansible role variable (default: /opt)",
      "type": "Optional[String]"
    },
    "solr_install_path": {
      "description": "Ansible role variable (default: /opt/{{ solr_service_name }})",
      "type": "Optional[String]"
    },
    "solr_home": {
      "description": "Ansible role variable (default: /var/{{ solr_service_name }})",
      "type": "Optional[String]"
    },
    "solr_connect_host": {
      "description": "Ansible role variable (default: localhost)",
      "type": "Optional[String]"
    },
    "solr_port": {
      "description": "Ansible role variable (default: 8983)",
      "type": "Optional[String]"
    },
    "solr_xms": {
      "description": "Ansible role variable (default: 256M)",
      "type": "Optional[String]"
    },
    "solr_xmx": {
      "description": "Ansible role variable (default: 512M)",
      "type": "Optional[String]"
    },
    "solr_timezone": {
      "description": "Ansible role variable (default: UTC)",
      "type": "Optional[String]"
    },
    "solr_opts": {
      "description": "Ansible role variable (default: $SOLR_OPTS -Dlog4j2.formatMsgNoLookups=true)",
      "type": "Optional[String]"
    },
    "solr_cores": {
      "description": "Ansible role variable (default: [\"collection1\"])",
      "type": "Optional[Array]"
    },
    "solr_default_core_path": {
      "description": "Ansible role variable (default: {% if solr_version.split('.')[0] < '9' %}{{ solr_install_path }}/example/files/conf/{% else %}{{ solr_install_path }}/server/solr/configsets/_default/conf/{% endif %})",
      "type": "Optional[String]"
    },
    "solr_config_file": {
      "description": "Ansible role variable (default: /etc/default/{{ solr_service_name }}.in.sh)",
      "type": "Optional[String]"
    },
    "solr_restart_handler_enabled": {
      "description": "Ansible role variable (default: true)",
      "type": "Optional[Boolean]"
    },
    "par_tags": {
      "description": "An array of Ansible tags to execute (optional)",
      "type": "Optional[Array[String]]"
    },
    "par_skip_tags": {
      "description": "An array of Ansible tags to skip (optional)",
      "type": "Optional[Array[String]]"
    },
    "par_start_at_task": {
      "description": "The name of the task to start execution at (optional)",
      "type": "Optional[String]"
    },
    "par_limit": {
      "description": "Limit playbook execution to specific hosts (optional)",
      "type": "Optional[String]"
    },
    "par_verbose": {
      "description": "Enable verbose output from Ansible (optional)",
      "type": "Optional[Boolean]"
    },
    "par_check_mode": {
      "description": "Run Ansible in check mode (dry-run) (optional)",
      "type": "Optional[Boolean]"
    },
    "par_timeout": {
      "description": "Timeout in seconds for playbook execution (optional)",
      "type": "Optional[Integer]"
    },
    "par_user": {
      "description": "Remote user to use for Ansible connections (optional)",
      "type": "Optional[String]"
    },
    "par_env_vars": {
      "description": "Additional environment variables for ansible-playbook execution (optional)",
      "type": "Optional[Hash]"
    }
  },
  "implementations": [
    {
      "name": "paw_ansible_role_solr.sh",
      "requirements": [
        "shell"
      ],
      "input_method": "environment"
    },
    {
      "name": "paw_ansible_role_solr.ps1",
      "requirements": [
        "powershell"
      ],
      "input_method": "environment"
    }
  ]
}